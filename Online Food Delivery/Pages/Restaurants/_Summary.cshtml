@using OnlineFoodDelivery.Core
@model Restaurant

<div class="card">
    <div class="h1">
        <h3>@Model.Name</h3>
    </div>

    <div class="card-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>

    <div class="card-footer">
        <a class="btn btn-primary"
           asp-page="./Detail"
           asp-route-rid="@Model.Id">
            Get Details
        </a>

        <a class="btn btn-success"
           asp-page="./Edit"
           asp-route-rid="@Model.Id">
            Edit
        </a>

        <a class="btn btn-danger"
           asp-page="./Delete"
           asp-route-rid="@Model.Id">
            Delete
        </a>
    </div>
</div>